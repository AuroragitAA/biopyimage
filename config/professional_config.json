{
  "system_info": {
    "name": "Professional Wolffia Analysis System",
    "version": "3.0.0",
    "mode": "production"
  },
  "analysis": {
    "pixel_to_micron": 1.0,
    "chlorophyll_threshold": 0.6,
    "min_cell_area": 30,
    "max_cell_area": 8000,
    "quality_threshold": 0.75,
    "enable_advanced_segmentation": true,
    "multi_scale_analysis": true
  },
  "database": {
    "enabled": true,
    "db_type": "sqlite",
    "db_path": "professional_wolffia.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "auto_cleanup": true,
    "data_retention_days": 365
  },
  "ml": {
    "enabled": true,
    "auto_training": true,
    "confidence_threshold": 0.75,
    "enable_hyperparameter_tuning": true,
    "classification_models": ["random_forest", "xgboost", "neural_network"],
    "regression_models": ["random_forest", "gradient_boosting", "xgboost"]
  },
  "batch": {
    "enabled": true,
    "max_workers": 4,
    "quality_control": true,
    "enable_qc": true,
    "outlier_detection": true,
    "export_formats": ["csv", "excel", "json", "hdf5"],
    "compress_results": true
  },
  "system": {
    "professional_mode": true,
    "auto_export": true,
    "monitoring_enabled": true,
    "max_concurrent_analyses": 4,
    "memory_optimization": "balanced",
    "enable_gpu_acceleration": false
  },
  "api": {
    "enable_cors": true,
    "rate_limiting": true,
    "max_file_size_mb": 32,
    "allowed_formats": ["jpg", "jpeg", "png", "tif", "tiff", "bmp", "jfif"]
  },
  "export": {
    "default_format": "excel",
    "include_visualizations": true,
    "include_metadata": true,
    "auto_timestamp": true
  }
}